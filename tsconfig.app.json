{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "moduleResolution": "node",
    "strict": true,
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "rootDir": "./",
    "outDir": "dist",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "sourceMap": true
  },
  "include": [
    "assets/script/**/*.ts"
  ]
}

